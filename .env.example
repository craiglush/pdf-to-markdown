# MarkItDown Multi-Format Document Converter - Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# LLM Configuration (Optional - for AI-powered image descriptions)
# =============================================================================
# Enable LLM-powered image descriptions in documents
PDF2MD_LLM_ENABLED=false

# OpenAI API key for LLM image descriptions
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use for image descriptions
PDF2MD_LLM_MODEL=gpt-4o

# Custom prompt for LLM image descriptions (optional)
# PDF2MD_LLM_PROMPT="Describe this image in detail for a markdown document"

# =============================================================================
# Azure Document Intelligence (Optional - for high-accuracy PDF conversion)
# =============================================================================
# Enable Azure Document Intelligence for high-accuracy PDF conversion
PDF2MD_AZURE_ENABLED=false

# Azure Document Intelligence endpoint
# Example: https://your-resource.cognitiveservices.azure.com/
AZURE_DOCINTEL_ENDPOINT=your_azure_endpoint_here

# Azure Document Intelligence API key
AZURE_DOCINTEL_KEY=your_azure_key_here

# =============================================================================
# Conversion Settings
# =============================================================================
# Default conversion strategy: auto, fast, accurate
PDF2MD_STRATEGY=auto

# Enable rich metadata extraction (images, tables, detailed metadata)
# Note: This uses additional libraries and increases processing time
PDF2MD_RICH_CONVERSION=false

# Image handling mode: embed, link, separate
PDF2MD_IMAGE_MODE=embed

# Table format: github, pipe, grid, html
PDF2MD_TABLE_FORMAT=github

# Number of workers for batch processing
PDF2MD_BATCH_WORKERS=4

# =============================================================================
# MarkItDown Settings
# =============================================================================
# Enable/disable MarkItDown plugins (default: false for security)
PDF2MD_MARKITDOWN_PLUGINS=false

# =============================================================================
# Application Settings
# =============================================================================
PDF2MD_DEBUG=false
PDF2MD_LOG_LEVEL=INFO

# =============================================================================
# API Settings (FastAPI)
# =============================================================================
PDF2MD_API_HOST=127.0.0.1
PDF2MD_API_PORT=8000
PDF2MD_API_WORKERS=4
PDF2MD_API_MAX_FILE_SIZE=52428800  # 50MB in bytes

# Streamlit web UI port
PDF2MD_STREAMLIT_PORT=8501

# =============================================================================
# Paths
# =============================================================================
PDF2MD_TEMP_DIR=/tmp/pdf2md
PDF2MD_CACHE_DIR=~/.cache/pdf2md

# =============================================================================
# Cache Settings
# =============================================================================
# Enable conversion result caching
PDF2MD_CACHE_ENABLED=false

# =============================================================================
# Celery Settings (for async processing)
# =============================================================================
PDF2MD_CELERY_BROKER_URL=redis://localhost:6379/0
PDF2MD_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis URL for API caching (optional)
# REDIS_URL=redis://localhost:6379/0
